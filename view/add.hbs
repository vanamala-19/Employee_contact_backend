<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee_Contacts</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/add">ADD</a></li>
        <li><a href="/search">SEARCH</a></li>
        <li><a href="/update">UPDATE</a></li>
        <li><a href="/delete">DELETE</a></li>
      </ul>
    </nav>
    {{#if msg}}
      <div class="alert success">
        <span class="closebtn">&times;</span>
        <strong>Data Inserted</strong>
      </div>
    {{/if}}
    {{#if checkmesg}}
      <div class="alert error">
        <span class="closebtn">&times;</span>
        <strong>Emailid or Phone_no already Exist in DataBase!</strong>
      </div>
    {{/if}}

    <form action="/addEmployee" class="employee-contact-form">
      <h1>Employee Contact Form</h1>
      <hr />
      <div class="form-group">
        <label for="name">Employee Full Name</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="name"
          id="name"
          required
        />
      </div>
      <div class="form-group">
        <label for="job">Job Title</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="job"
          id="job"
          required
        />
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" name="phone" id="phone" required />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" required />
      </div>
      <div class="form-group">
        <label for="adress">Address</label>
        <textarea
          placeholder="Type your answer here"
          name="adress"
          id="adress"
          aria-describedby="descriptive text"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <label for="city">City</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="city"
          id="city"
          required
        />
      </div>
      <div class="form-group">
        <label for="state">State</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="state"
          id="state"
          required
        />
      </div>
      <h2>Emergency Contacts</h2>
      <div class="form-group">
        <label for="c1name">Primary Emergency Contact</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="c1name"
          id="c1name"
          required
        />
      </div>
      <div class="form-group">
        <label for="c1phone">Phone Number</label>
        <input type="tel" name="c1phone" id="c1phone" required />
      </div>
      <div class="form-group">
        <label for="c1relation">Relationship</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="c1relation"
          id="c1relation"
          required
        />
      </div>
      <div class="form-group">
        <label for="c2name">Secondary Emergency Contact</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="c2name"
          id="c2name"
          required
        />
      </div>
      <div class="form-group">
        <label for="c2phone">Phone Number</label>
        <input type="tel" name="c2phone" id="c2phone" required />
      </div>
      <div class="form-group">
        <label for="c2relation">Relationship</label>
        <input
          type="text"
          placeholder="Type your answer here"
          name="c2relation"
          id="c2relation"
          required
        />
      </div>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>